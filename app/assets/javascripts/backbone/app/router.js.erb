define([
    'jquery',
    'underscore',
    'backbone',
    'handlebars',
    'marionette',
    '<%= javascript_path('backbone/views/layouts/app_layout/app_layout') %>',
    '<%= javascript_path('backbone/views/regions/app_region') %>'


], function($, _, Backbone,Handlebars,Marionette,AppLayout, AppRegion){

      var MainAppController = {

          Home: function() {    
            var app_layout = new AppLayout();
            var app_region = new AppRegion();

            app_region.show(app_layout);     
          }

      };


      var Router = Backbone.Marionette.AppRouter.extend({
            appRoutes : {
                '': 'Home',
            }

      });

      return new Router({controller: MainAppController});

});